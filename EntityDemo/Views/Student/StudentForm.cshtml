@model EntityDemo.ViewModels.StudentFormViewModel
@{
    ViewBag.Title = "StudentForm";
}

<h2>StudentForm</h2>
@using (Html.BeginForm("Save", "Student"))
{
    <div class="form-group">
    @Html.LabelFor(s => s.Student.Stud_Name)
    @Html.TextBoxFor(s => s.Student.Stud_Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Student.Email)
        @Html.TextBoxFor(s => s.Student.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(s => s.Student.Course)
        @Html.DropDownListFor(m => m.Student.CourseId, new SelectList (Model.Course, "Id", "Course_Name"),
       "Select Course", new { @class = "form-control"})
    </div>

    @Html.HiddenFor(m => m.Student.Id)
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

}





